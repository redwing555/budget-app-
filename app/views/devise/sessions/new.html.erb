

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <nav class="navigation px-4">
    <ul class="navigation-items">
      <li>
        <%= link_to root_path do %>
        <i class="back-icon fa fa-arrow-left text-white cursor-pointer"></i>
        <%end%>
      </li>
      <li>
        <p class="text-white font-proxima">LOGIN</p>
      </li>
      <li>
        <%= f.submit "Log in", class: "next text-white bg-transparent cursor-pointer" %>
      </li>
    </ul>
  </nav>
  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: "Email", autocomplete: "email", class:"input email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class:"input" %>
  </div>
  <%= render "devise/shared/error_messages", resource: resource %>

<% end %>

<%= render "devise/shared/links" %>
